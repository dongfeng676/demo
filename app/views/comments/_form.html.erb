    <label class="col-sm-4 control-label">评论内容:</label>
    <div class="col-sm-4">
      <%= f.text_field :text,class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <button calss="btn btn-success" type="submit">
