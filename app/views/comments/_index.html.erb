<p class="article_list">comments list</p>
<div class = "panel panel-default comments">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>text</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment|%>
        <tr>
          <td class="col-sm-2"><%=comment.id%></td>
          <td class="col-sm-2"><%=comment.text%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @comments %>