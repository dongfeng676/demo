<% content_for :title do %>
  文章
<% end %>
<h1 class="article_list">文章列表</h1>
<div class="container">
  <%= link_to '添加文章', new_article_path, class: ' btn btn-success'%>
  <% if @articles.present? %>
    <div class = "panel panel-default">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>title</th>
            <th>text</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article|%>
            <tr>
              <td class="col-sm-2"><a href="<%=article_path(article)%>"><%=article.id%></a></td>
              <td class="col-sm-2"><%=article.name%></td>
              <td class="col-sm-2"><%=article.text%></td>
              <td class="col-sm-4">
               <%= link_to '修改',edit_article_path(article)%>|
               <%= link_to '删除', article_path(article), method: :delete, data: { confirm: '确定要删除吗？' }%> 
              </td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
    </div>
    <%= paginate @articles %>
  <% else %>
    <div class="col-sm-offset-2">
      <h2>赶快来添加吧！</h2>
    </div>
  <% end %>
</div>